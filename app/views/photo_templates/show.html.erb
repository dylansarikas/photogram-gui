<img src="<%= @this_photo.image %>" alt="photo">

<dl>
  <dt>
    Caption
  </dt>
  <dd>
    <%= @this_photo.caption %>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= @this_photo.poster.username %>
  </dd>

   <dt>
    Posted
  </dt>
  <dd>
    <%= @this_photo.created_at %>
  </dd> 

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/photos/<%= @this_photo.id %>" method="post">
      <label for="image_field">
        Image
      </label>
      <input type="text" id="image_field" name="image" value="<%= @this_photo.image %>" placeholder="Enter a URL for the iamge">

      <label for="caption_field">
        Caption
      </label>
      <textarea name="caption" id="caption_field" placeholder="Enter a caption for the photo..." ><%= @this_photo.caption %></textarea>

      <button>
        Update photo
      </button>
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/photos_delete/<%= @this_photo.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Coments</h2>

<table>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>
  </tr>

  <% @this_photo.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>

      <td>
        <%= comment.body %>
      </td>

      <td>
        <%= comment.created_at %>
      </td>
    </tr>

  <% end %>
</table>

