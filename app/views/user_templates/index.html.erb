<h1> List of Users </h1>

<form action="/users" method="post">
  <label for="username_field">
    Username
  </label>

  <input type="text" id="username_field" name="username" placeholder="Enter a username...">

  <button>
    Add user
  </button>
</form>

<table border="1">
  <tr>
    <th>ID</th>

    <th>Username</th>

    <th></th>
  </tr>

  <% @all_users.each do |user| %>

    <tr>
      <td>
        <%= user.id %>
      </td>

      <td>
        <%= user.username  %>
      </td>

      <td>
        <a href="/users/<%= user.username  %>">Show details</a>
      </td>
    </tr>


  <% end%>
  

</table>
